{
  "name": "cknow/laravel-money",
  "description": "Laravel Money",
  "keywords": [
    "laravel",
    "money",
    "currency"
  ],
  "homepage": "https://github.com/cknow/laravel-money",
  "license": "MIT",
  "authors": [
    {
      "name": "Ricardo Gobbo de Souza",
      "email": "ricardogobbosouza@yahoo.com.br",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "ricardo@clicknow.com.br",
    "issues": "https://github.com/cknow/laravel-money/issues",
    "source": "https://github.com/cknow/laravel-money"
  },
  "require": {
    "php": "~7.1",
    "ext-json": "*",
    "ext-intl": "*",
    "illuminate/support": "~5.6",
    "illuminate/view": "~5.6",
    "moneyphp/money": "~3.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "~2.11",
    "graham-campbell/testbench": "~5.0",
    "jakub-onderka/php-parallel-lint": "~1.0",
    "mockery/mockery": "~1.0",
    "nikic/php-parser": "~3.1 || ~4.0",
    "phpmd/phpmd": "~2.6",
    "phpro/grumphp": "~0.14",
    "phpstan/phpstan": "~0.9",
    "phpunit/phpunit": "~7.0",
    "povils/phpmnd": "~2.0",
    "sebastian/phpcpd": "~4.0",
    "sensiolabs/security-checker": "~4.1",
    "squizlabs/php_codesniffer": "~3.2"
  },
  "autoload": {
    "files": [
      "src/helpers.php"
    ],
    "psr-4": {
      "Cknow\\Money\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Cknow\\Money\\": "tests/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "scripts": {
    "test": [
      "grumphp run"
    ]
  },
  "extra": {
    "laravel": {
        "providers": [
            "Cknow\\Money\\MoneyServiceProvider"
        ]
    }
  }
}
